
@model List<Loader.ViewModel.Grade.FacultyVM>

@{
    Layout = Request.IsAjaxRequest() ? null : "~/Views/Shared/_Layout.cshtml";

    var sn = 0;
}


<div class="container">
    <div>
        <h3>Faculty List</h3>
        <span style="float: right; cursor: pointer; margin-bottom:5px;">
            @Html.ActionLink("Add New", "AddFaculty", "Master", htmlAttributes: new { @class = "btn btn-sm btn-primary" })
        </span>
    </div>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>SN.</th>
                <th>Faculty Name</th>
                <th>Status Name</th>
                <th>Aciton</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {

                <tr>
                    <td>
                        @(sn+=1)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.FacultyName)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.StatusName)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "UpdateFaculty", "Master", new { id = item.Fid }, htmlAttributes: new { @class = "btn btn-sm btn-primary" })

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>








